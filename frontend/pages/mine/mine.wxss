/* pages/mine/mine.wxss */
page {
    background-color: #f1f1f1;
}
.profile-header {
    background-size: cover;
    height: 480rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
    background-color: #00b38a;
}

.avatar-url {
    width: 200rpx;
    height: 200rpx;
    display: block;
    overflow: hidden;
    border: 6rpx solid #fff;
    border-radius: 50%;
}